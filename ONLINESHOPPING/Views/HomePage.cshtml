@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.HomePage>
@using ContentModels = Umbraco.Web.PublishedModels;
@using Umbraco.Web.Models;
@{
    Layout = "Master.cshtml";
}
<div>
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="@Model.BannerImage.Url" alt="First slide" style="width:100%;height:500px">
            </div>
            <hr />
            @{
                var links = Model.Value<IEnumerable<Link>>("bannerLink");
                if (links.Any())
                {
                    @:
                    foreach (var link in links)
                    {
                        <div class="carousel-item active" style="text-align:center">
                            <a href="@link.Url" target="_blank"><strong>Banner Link</strong></a>
                            <div class="carousel-content">
                                <h5>@Model.Value("homebannerHeading")</h5>
                            </div>
                        </div>
                    }
                }
            }
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <!-- Main Content-->
    <div class="container-fluid bg-3 text-center">
        <h3 class="margin">Where To Find Me?:-@Model.PodTitle</h3><br>
        <div class="row">
            <div class="col-sm-12">
                    @{
                        var podlinks = Model.Value<IEnumerable<Link>>("podLink");
                        if (links.Any())
                        {
                            @:
                            foreach (var link in podlinks)
                            {

                <p>This is so famous fashion store which contains Fashion items like Tshirts,Shirts,Pants for both Men and Women with amazing brands.</p>
                                <img src="@Model.PodImage.Url()" class="img-responsive margin" style="width:100%" alt="Image">
                                <a href="@link.Url" target="_blank">Go to Fashion Page to Know More About</a>
                            }
                        }
                    }
            </div>
                @*<div class="col-sm-6">
            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
            <img src="birds2.jpg" class="img-responsive margin" style="width:100%" alt="Image">*@
        </div>
    </div>
</div>