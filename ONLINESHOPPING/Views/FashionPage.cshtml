@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.FashionPage>
@using ContentModels = Umbraco.Web.PublishedModels;
@using Umbraco.Web.Models;
@{
    Layout = "Master.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
    <div>
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                @{
                    var typedMultiMediaPicker = Model.Value<IEnumerable<MediaWithCrops>>("fashionImage");

                    foreach (var item in typedMultiMediaPicker)
                    {
                        <div class="carousel-item active">
                            <img src="@item.MediaUrl()" alt="First slide" style="width:100%;height:500px">
                        </div>
                        <div class="carousel-item">
                            <img src="@item.MediaUrl()" alt="Second slide" style="width:100%;height:500px">
                        </div>
                        <div class="carousel-item">
                            <img src="@item.MediaUrl()" alt="Third slide" style="width:100%;height:500px">
                        </div>
                    }
                }
                <hr />
                @*<div class="carousel-item active" style="text-align:right">
                    @{
                        var links = Model.Value<IEnumerable<Link>>("fashionLink");
                        if (links.Any())
                        {
                            <ul>
                                @foreach (var link in links)
                                {
                                    <li><a href="@link.Url" target="@link.Target"><h2 class="text-white text-center">@link.Name</h2></a></li>
                                }
                            </ul>
                        }
                    }
                    <div class="carousel-content text-white" style="text-align:center">
                        <h5>@Model.Value("fashionTitle")</h5>
                    </div>
                </div>*@
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <!-- Main Content-->
    <div class="container-fluid bg-3 text-center">
        <h3 class="margin">@Model.FashionTitle</h3><br>
        <h5 class="text-warning">@Model.FashionContent</h5>
        <div class="row">
            <div class="col-sm-6">
                @{
                    var contentlinks = Model.Value<IEnumerable<Link>>("contentLink");
                    if (contentlinks.Any())
                    {
                        @:
                        foreach (var link in contentlinks)
                        {

                            <p>@Model.ContentTitle</p>
                            <img src="@Model.ContentImage.Url()" class="img-responsive margin" style="width:100%" alt="Image">
                            <a href="@link.Url" target="_blank">@Model.BodyText Go to Men Fashion Page to Know More About</a>
                        }
                    }
                }
            </div>
            <div class="col-sm-6">
                @{
                    var womenlinks = Model.Value<IEnumerable<Link>>("womenLink");
                    if (womenlinks.Any())
                    {
                        @:
                        foreach (var link in womenlinks)
                        {

                            <p>@Model.WomenTitle</p>
                            <img src="@Model.WomenImage.Url()" class="img-responsive margin" style="width:100%" alt="Image">
                            <a href="@link.Url" target="_blank">@Model.WomenBodyText Go to WoMen Fashion Page to Know More About</a>
                        }
                    }
                }
            </div>
        </div>
    </div>
    <!-- Main Content-->
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <!-- Post preview-->
                <div class="post-preview">
                    <a href="post.html">
                        <h2 class="post-title">Man must explore, and this is exploration at its greatest</h2>
                        <h3 class="post-subtitle">Problems look mighty small from 150 miles up</h3>
                    </a>
                    <p class="post-meta">
                        Posted by
                        <a href="#!">Start Bootstrap</a>
                        on September 24, 2022
                    </p>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
